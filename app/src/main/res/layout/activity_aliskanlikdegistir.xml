<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/projearkaplanrengi">


    <TextView
        android:id="@+id/aliskanlik_degistirdekisayi"
        android:layout_width="54dp"
        android:layout_height="16dp"
        android:layout_marginTop="104dp"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.518"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/aliskanlik_olusturma"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:layout_marginTop="140dp"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.518"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/sil"
        android:layout_width="112dp"
        android:layout_height="66dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="60dp"
        android:background="@drawable/olustur3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/metingir"
        app:srcCompat="@drawable/baseline_delete_24" />

    <ImageButton
        android:id="@+id/degistir"
        android:layout_width="112dp"
        android:layout_height="66dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="70dp"
        android:background="@drawable/olustur2"
        app:layout_constraintEnd_toStartOf="@+id/sil"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/metingir"
        app:srcCompat="@drawable/baseline_autorenew_24" />

    <TextView
        android:id="@+id/metingiriniz"
        android:layout_width="358dp"
        android:layout_height="27dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/isimmetin"
        android:paddingLeft="20dp"
        android:text="Açıklama :"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.471"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/isimgir" />

    <ImageButton
        android:id="@+id/btn_geri"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/daire"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_arrow_back_24" />

    <TextView
        android:id="@+id/isimgiriniz"
        android:layout_width="358dp"
        android:layout_height="27dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/isimmetin"
        android:text="İsim :"
        android:paddingLeft="20dp"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/isimgir"
        android:layout_width="358dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/isimmetingir"
        android:ems="10"
        android:inputType="text"
        android:paddingLeft="20dp"
        android:text=""
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/isimgiriniz" />

    <EditText
        android:id="@+id/metingir"
        android:layout_width="353dp"
        android:layout_height="107dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/isimmetingir"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/metingiriniz" />

</androidx.constraintlayout.widget.ConstraintLayout>